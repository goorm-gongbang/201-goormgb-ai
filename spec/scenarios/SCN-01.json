{
  "id": "SCN-01",
  "name": "Normal Ticket Flow",
  "description": "Standard S0 to SX flow with no interruptions.",
  "initial_state": "S0",
  "policy_profile": "default",
  "events": [
    { "type": "FLOW_START", "source": "ui", "delay_ms": 100 },
    { "type": "ENTRY_ENABLED", "source": "api", "stage": "S1" },
    { "type": "QUEUE_PASSED", "source": "ui", "stage": "S2" },
    { "type": "SECTION_SELECTED", "source": "ui", "stage": "S4" },
    { "type": "SEAT_SELECTED", "source": "ui", "stage": "S5" },
    { "type": "PAYMENT_COMPLETED", "source": "api", "stage": "S6" }
  ],
  "accept": {
    "final_state": "SX",
    "terminal_reason": "DONE",
    "asserts": [
      {
        "type": "state_path_equals",
        "value": ["S0", "S1", "S2", "S4", "S5", "S6", "SX"],
        "description": "Check full state path"
      },
      {
        "type": "counter_at_least",
        "value": 6,
        "description": "At least 6 events handled"
      }
    ]
  },
  "meta": {
    "tags": ["smoke", "happy-path"],
    "version": "1.0"
  }
}
